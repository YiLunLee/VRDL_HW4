{
    "mode": "sr",
    "use_cl": true,
    "gpu_ids": [0],

    "scale": 3,
    "is_train": true,
    "use_chop": true,
    "rgb_range": 255,
    "self_ensemble": false,
    "save_image": false,

    "datasets": {
        "train": {
            "mode": "LRHR",
            "dataroot_HR": "./vrdl_data/training_aug/HR_x3",
            "dataroot_LR": "./vrdl_data/training_aug/LR_x3",
            "data_type": "npy",
            "n_workers": 4,
            "batch_size": 16,
            "LR_size": 8,
            "use_flip": true,
            "use_rot": true,
            "noise": "."
        },
        "val": {
            "mode": "LRHR",
            "dataroot_HR": "./vrdl_data/val_light/HR_x3",
            "dataroot_LR": "./vrdl_data/val_light/LR_x3",
            "data_type": "img"
        }
    },

    "networks": {
        "which_model": "SRFBN",
        "num_features": 64,
        "in_channels": 3,
        "out_channels": 3,
        "num_steps": 4,
        "num_groups": 6
    },

    "solver": {
        "type": "ADAM",
        "learning_rate": 0.0001,
        "weight_decay": 0,
        "lr_scheme": "MultiStepLR",
        "lr_steps": [200, 400, 600, 800],
        "lr_gamma": 0.5,
        "loss_type": "l1",
        "manual_seed": 0,
        "num_epochs": 1000,
        "skip_threshold": 3,
        "split_batch": 1,
        "save_ckp_step": 50,
        "save_vis_step": 1,
        "pretrain": null,
        "pretrained_path": "./",
        "cl_weights": [1.0, 1.0, 1.0, 1.0]
    }
}